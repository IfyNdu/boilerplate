{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"overrides": [
		{
			"files": [
				"*test.js"
			],
			"rules": {
				"no-undef": "off"
			}
		}
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"settings": {
		"react": {
			"pragma": "React",
      "version": "^16.6.3"
		}
	},
	"rules": {
		"indent": [
			2,
			2
		],
		"linebreak-style": [
			2,
			"unix"
		],
		"lines-between-class-members": [
			1,
			"always"
		],
		"no-magic-numbers": 1,
		"no-trailing-spaces": 2,
		"no-unused-vars": 2,
		"quotes": [
			2,
			"single"
		],
		"semi": [
			2,
			"always"
		],
		"sort-keys": [
			2,
			"asc",
			{
				"caseSensitive": true,
				"natural": false
			}
		]
	}
}